{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile IO_Toolbox",
            "type": "shell",
            "command": "gfortran",
            "args": [
                "-c",
                "IO_Toolbox.f95"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Compile Main",
            "type": "shell",
            "command": "gfortran",
            "args": [
                "main.f95",
                "-o",
                "main",
                "IO_Toolbox.o"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "dependsOn": ["Compile IO_Toolbox"]
        },
        {
            "label": "Execute Main",
            "type": "shell",
            "command": "main",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": ["Compile Main"]
        }
    ]
}